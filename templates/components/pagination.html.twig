{# tailwindcss Sliding pagination control implementation #}
{% if pageCount > 1 %}
	<div class='inline-block'>
		<div class='flex items-baseline flex-row border border-yellow-400 w-auto rounded-lg'>
			{% if first is defined and current != first %}
				<span class=' text-yellow-400 px-3 py-2 text-sm  font-bold'>
					<a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&lt;&lt;</a>
				</span>
			{% endif %}

			{% if previous is defined %}
				<span class='text-yellow-400 px-3 text-sm py-2 '>
					<a rel='prev' href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt;</a>
				</span>
			{% endif %}

			{% for page in pagesInRange %}
				{% if page != current %}
					<span class=' text-yellow-400 px-3 py-2 text-sm'>
						<a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
					</span>
				{% else %}
					<span class='bg-red-600 text-white px-3 py-2 text-sm font-bold rounded-lg'>{{ page }}</span>
				{% endif %}
			{% endfor %}

			{% if next is defined %}
				<span class=' text-yellow-400 px-3 py-2 text-sm '>
					<a rel='next' href="{{ path(route, query|merge({(pageParameterName): next})) }}">&gt;</a>
				</span>
			{% endif %}

			{% if last is defined and current != last %}
				<span class=' text-yellow-400 px-3 py-2 text-sm  font-bold'>
					<a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&gt;&gt;</a>
				</span>
			{% endif %}
		</div>
	</div>
{% endif %}
