<a href='/categorie/{{category.slug}}'>

	<div class='relative lg:w-64 lg:h-64 overflow-hidden'>
		<img src='{{ ('/uploads/' ~ category.media.filename) | imagine_filter('cardimg') }} ' alt='{{category.slug}}' class='w-full h-full object-cover object-top rounded-lg hover:scale-125 transform transition-transform ease-in delay-400'/>
		<div class='absolute bottom-0 right-0 p-4 bg-black bg-opacity-75 w-full rounded-bl-lg rounded-br-lg gl flex items-center gap-2 overflow-hidden hover:bg-black'>
			<img src='/images/icons/category-ico-r.svg' alt='category-icon' class='w-8 h-8'>
			<h3 class='text-lg text-yellow-400'>{{category.name}}</h3>
		</div>
	</div>
</a>
