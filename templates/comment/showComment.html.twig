{% set user = comment.author %}

<div class='grid grid-cols-1 gap-1 m-2 p-1 rounded-lg bg-neutral-100 shadow-lg'>
	<div class='flex items-center gap-2 p-2'>
		{% if post.user.avatar is not empty %}
			<img src='/uploads/avatars/{{user.avatar}}' class='rounded-full object-cover h-8 w-8 border-2 border-yellow-400' alt='' loading='lazy'>
		{% endif %}
		<span class='text-sm text-red-600'>{{user.username}}
			-
			{{comment.createdAt|date('d/m/y Ã  H:i:s')}}
		</span>
	</div>
	<span class='mb-2 ml-2 text-gray-500 text-sm' id='comment_message'>{{comment.message}}</span>
</div>
