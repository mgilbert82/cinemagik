{% extends 'base.html.twig' %}

{% block title %}
	{{pageTitle}}
	VOD:
	{{ source.name}}
{% endblock %}

{% block body %}
	<div class='flex items-center justify-center gap-2 w-full lg:w-1/2 p-4 lg:mx-auto my-8'>
		<div class='bg-neutral-50 rounded-lg p-4 flex lg:flex-row flex-col items-center justify-center gap-4 leading-normal'>
			<img src='/uploads/{{source.featImg.filename}}' alt='{{source.name}}' class='w-20 h-20 object-cover object-center rounded-full border-black border-2'>

			<div class='mb-4'>
				<div class='font-bold text-xl mb-2 font-anton my-4 uppercase text-gray-700 lg:text-left text-center'>
					{{source.name}}
				</div>
				<p class='text-gray-700 text-base'>{{source.featText}}</p>
			</div>
		</div>
	</div>
	<div class='grid lg:grid-cols-4 justify-center p-4'>
		{% for post in posts %}
			<div class='my-2 mx-2'>
				{% include 'post/postCard.html.twig' %}
			</div>
		{% endfor %}
	</div>
{% endblock %}
