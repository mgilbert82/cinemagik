{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class='flex items-center justify-center'>
		<div class='flex flex-col gap-4 p-4 bg-black rounded-lg mx-auto w-400px'>
			<h1 class='my-4 flex gap-2 items-center'>
				<img src="{{ asset('images/icons/register-ico.svg') }}" alt=''>
				{% trans %}
				Create an account
				{% endtrans %}</h1>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.username) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword) }}
			<button type='submit' class='bg-yellow-400 text-black text-center p-2 my-4 rounded-lg float-right'>{% trans %}Register{% endtrans %}</button>
			{{ form_end(registrationForm) }}
			<div class='flex items-center justify-center gap-2 my-4'>{% trans %}You already have an account ?{% endtrans %}
				<a href='{{path('app_login')}}' class='underline text-yellow-400'>{% trans %}Login{% endtrans %}</a>
			</div>
		</div>
	</div>
{% endblock %}
